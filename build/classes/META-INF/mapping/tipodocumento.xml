<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_1_0.xsd"
    version="1.0">
    
    <description>Tipo Documento Mapping</description>
    <package>bean</package>
    
    <entity class="bean.TipoDocumento" name="TipoDocumento">
        <table name="tipodocumento"/>
        <attributes>
            <embedded-id name="pk" />
            <basic name="documento">
                <column name="documento" />
            </basic>
            <one-to-many name="usuarios">
            	<join-column name="idTipoDocumento" referenced-column-name="idTipoDocumento" />
            </one-to-many>
        </attributes>
   </entity>
   
   <embeddable class="bean.TipoDocumentoPK">
   		<attributes>
   			<basic name="idTipoDocumento">
   				<column name="idTipoDocumento"/>
   			</basic>
   		</attributes>
   </embeddable>
   
</entity-mappings>